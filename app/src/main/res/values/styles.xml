<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/margin_wide</item>
        <item name="android:layout_marginTop">@dimen/margin_wide</item>
        <item name="android:layout_marginEnd">@dimen/margin_wide</item>

    </style>

    <style name="styles" parent="style">
        <item name="android:textAlignment">center</item>
    </style>

    <style name="whiteBox">
        <item name="android:background">@android:color/white</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">@dimen/box_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/white</item>

    </style>

</resources>